@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@inject IConfiguration Configuration
@{
    Layout = "_Layout";     // or your AdminLTE layout
}

<div class="content-wrapper d-flex  justify-content-center" style="min-height: calc(100vh - 100px);">
    <div class="container-fluid py-4">
        <div class="text-center" id="dateWiseStockTableLoader">
            <div class="spinner-border" role="status">
                <span class="visually-hidden"></span>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow-sm" style="width: 100%;">
                    <div class="card-body p-4">
                        <!-- Date Filter Section -->
                        <div class="row mb-4 justify-content-center">
                            <div class="col-md-3 col-6">
                                <label class="form-label">From Date</label>
                                <input type="date" id="fromDate" class="form-control">
                            </div>
                            <div class="col-md-3 col-6">
                                <label class="form-label">To Date</label>
                                <input type="date" id="toDate" class="form-control">
                            </div>
                            <div class="col-md-2 col-6 mt-md-0 mt-2">
                                <label class="form-label">Filter</label>
                                <button id="applyFilter" class="btn btn-primary w-100">
                                    <i class="fas fa-filter me-1"></i>
                                </button>
                            </div>
                            <div class="col-md-2 col-6 mt-md-0 mt-2">
                                <label class="form-label">Reset</label>
                                <button id="resetFilter" class="btn btn-secondary w-100">
                                    <i class="fas fa-undo me-1"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Table Section -->
                        <div class="table-responsive">
                            <table id="DateWiseStockReport" class="table table-striped table-bordered table-hover text-center">
                                <thead class="table-primary">
                                    <tr>
                                        <th scope="col">S.L</th>
                                        <th scope="col">Opening Stock</th>
                                        <th scope="col">Total Sold</th>
                                        <th scope="col">Closing Stock</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
        border: none;
    }

    .table th {
        font-weight: 600;
        white-space: nowrap;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.05);
    }

    @@media (max-width: 768px) {
        .form-label {
            font-size: 0.9rem;
        }
    }
</style>

@section Scripts {
    <script>
        $(function() {
          $("#fromDate").datepicker({
            dateFormat: "yy-mm-dd",
            onClose: function(selectedDate) {
              $("#toDate").datepicker("option", "minDate", selectedDate);
            }
          });

          $("#toDate").datepicker({
            dateFormat: "yy-mm-dd",
            onClose: function(selectedDate) {
              $("#fromDate").datepicker("option", "maxDate", selectedDate);
            }
          });
        });
    </script>

    <script>
        var token = '@(HttpContextAccessor.HttpContext.Session.GetString("JWToken") ?? "")';
        var apiBaseUrl = "@Configuration["WebApiBaseUrl"]";
        var table =  $('#DateWiseStockReport').DataTable({
            processing: false,
            serverSide: false,
            ajax: {
                url: apiBaseUrl+'/api/Report/DateWiseStock',
                type: 'GET',
                data: function (d) {
                    d.fromDate = $('#fromDate').val() || "";
                    d.toDate = $('#toDate').val() || "";
                },
                dataSrc: function (json) {
                    debugger
                     if (!json || (Array.isArray(json) && json.length === 0)) {
                        return []; 
                    }
                    return Array.isArray(json) ? json : (json?.data || []);
                },
                beforeSend: function (xhr) {
                    if (token) {
                        $('#dateWiseStockTableLoader').show();
                        $('#DateWiseStockReport').hide();
                        xhr.setRequestHeader('Authorization', 'Bearer ' + token);
                    }
                },
                complete: function () {
                    $('#dateWiseStockTableLoader').hide();
                    $('#DateWiseStockReport').show();
                    $('#DateWiseStockReport').show();
                    if (table.data().count() === 0) {
                            table.clear().draw();
                    }
                },
                error: function (xhr, error, thrown) {
                   
                    if (xhr.status === 401) {
                        toastr["error"]("Session expired!", "Please login again")
                        window.location.href = '/Account/Login';
                    }
                    toastr["error"]("Opps!", `${xhr.responseText}`)
                    
                }
            },
            columns: [
                {
                    data: null,
                    title: 'S.L',
                    render: function (data, type, row, meta) {
                        return meta.row + 1;
                    }
                },
                { data: 'productName', title: 'Product Name' },
                { data: 'openingStock', title: 'Opening Stock (before From Date)' },
                { data: 'totalSoldQuantity',title: 'Total Sold Quantity (within date range)' },
                { data: 'closingStock', title: 'Closing Stock' }
            ],
            paging: true,
            pageLength: 10,
            lengthChange: true,
            searching: true,
            ordering: true,
            responsive: true,
            language: {
                emptyTable: "No stock data available for the selected date range",
                loadingRecords: "Loading...",
                zeroRecords: "No matching stock records found",
                infoEmpty: "Showing 0 to 0 of 0 entries",
                info: "Showing _START_ to _END_ of _TOTAL_ entries",
                infoFiltered: "(filtered from _MAX_ total entries)"
                },
                initComplete: function() {
            // Hide the loading message once initialization is complete
            $('.dataTables_empty').html("No data available");
        }

        });


        $('#applyFilter').on('click', function () {
            table.ajax.reload();
        });

        $('#resetFilter').on('click', function () {
            $('#fromDate').val('');
            $('#toDate').val('');
        });

    </script>
}